@model Volunteer_Web.Models.Application_unit
@section Home_style{
    <link rel="stylesheet" href="https://cdn.staticfile.org/twitter-bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://cdn.staticfile.org/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://cdn.staticfile.org/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <style>

        body {
            font-family: 微軟正黑體;
            margin-top:50px;
        }

        .prof-page-info {
            padding: 10px;
        }

        .prof-img {
            width: 260px;
            height: 300px;
            position: relative;
            border: 5px solid #1CADA9;
        }

            .prof-img img {
                position: absolute;
                width: 100%;
                height: 100%;
                padding: 3px;
            }

        .img-title {
            position: absolute;
            bottom: 0px;
            background: #1CADA9;
            color: #fff;
            width: 100%;
            text-align: center;
            padding: 5px;
            border: 1px solid #fff;
            padding: 5px 5px 5px 5px;
        }

        .info {
            padding: 10px;
            font-size: 14px;
            border-bottom: 1px solid #ddd;
        }

        .prog-page {
            border: 1px solid #ddd;
            box-shadow: 1px 1px 5px #ddd;
            position: relative;
        }

        .header-info {
            position: relative;
            padding-left: 25px;
            border-bottom: 3px solid #1CADA9;
            color: #1CADA9;
            padding: 10px;
            margin-left:10px;
        }

        .prof-info .info i {
            padding: 8px 9px 0px 9px;
            box-shadow: 1px 1px 5px #ddd;
            background: #0099ff;
            width: 30px;
            height: 30px;
            border-radius: 50%;
            color: #fff;
            margin-right: 10px;
        }

        .header-info i {
            padding-right: 8px;
            font-size: 25px;
        }

        .tags-label {
            background: #0099ff;
            color: #fff;
            position: absolute;
            padding: 7px 6px 7px 5px;
            box-shadow: 0 8px 17px 0 rgba(0,0,0,0.2),0 6px 20px 0 rgba(0,0,0,0.19);
            z-index: 1;
        }

            .tags-label i {
                color: #fff;
            }

            .tags-label span {
                padding: 4px;
                border: 1px solid #fff;
                padding: 4px 7px 3px 9px
            }

        .header-info a {
            cursor: pointer;
            float: right;
            position: absolute;
        }

        .header-btn-edit {
            float: right;
            top: 15px;
            position: absolute;
            right: 12px;
        }

            .header-btn-edit a {
                background: #2b7dc3;
                color: #fff;
                padding: 10px;
                border-radius: 20px;
                box-shadow: 1px 1px 5px #eee;
            }

                .header-btn-edit a i {
                    color: #fff;
                    padding-right: 8px;
                }

        .columns {
            float: left;
            width: 100%;
            padding: 8px;
        }

        .price {
            list-style-type: none;
            border: 1px solid #eee;
            margin: 0;
            padding: 0;
            -webkit-transition: 0.3s;
            transition: 0.3s;
        }

            .price:hover {
                box-shadow: 0 8px 12px 0 rgba(0,0,0,0.2)
            }

            .price .header {
                background-color: #666;
                color: white;
                font-size: 16px;
            }

            .price li {
                border-bottom: 1px solid #eee;
                padding: 12px;
                text-align: center;
            }

        @@media only screen and (max-width: 600px) {
            .columns {
                width: 100%;
            }
        }

        div.vision-news-loop div.mask, div.vision-news-loop:hover div.mask {
            -webkit-transition: all 0.35s;
            -moz-transition: all 0.35s;
            -o-transition: all 0.35s;
            transition: all 0.35s;
        }

        div.vision-news-loop div.mask {
            position: absolute;
            bottom: 22px;
            left: 15px;
            width: 258px;
            height: 0px;
            background-color: rgba(0,0,0,0.77);
            opacity: 0.7;
            color: #BBB;
        }

        div.vision-news-loop:hover div.mask {
            padding: 10px;
            height: 50%;
        }

        span.news-date {
            color: white;
            /*margin-left: 70px;*/
            font-size: 18px;
            font-weight: bold;
        }

        .hide {
            display: none;
        }

        .mm {
            margin-top: 25%;
            text-align: center;
        }
    </style>
}
@using (Html.BeginForm("Upload", "Unit", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="container">
        <div class="row">
            @*<a class="btn btn-success">參與過的活動</a>*@
            @*<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
                <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
                <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>*@
            <!------ Include the above in your HEAD tag ---------->
            @*<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">*@
            <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">

            <div class="container" style="margin-top:10px;">
                <div class="prog-page">
                    <div class="header-title header-btn">
                        <div class="header-info">
                            @Html.TextBoxFor(a => a.ImagePath, new { @class = "form-control", type = "file", style = "display:none" })
                            <h1>@*<i class="fa fa-info-circle"></i>*@@Html.Label("Volunteer_no", "單位基本資料")</h1>
                        </div>
                    </div>
                    <div class="prof-page-info">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="vision-news-loop">
                                    <div class="prof-img">
                                        <img src="~/Images/@TempData["Image"]" id="unitimage" />
                                        <div class="img-title">
                                            <h5>@*單位名字*@ @Html.Label("Chinese_name", Model.Application_unit1)</h5>
                                        </div>
                                    </div>
                                    <div class="vision-thumbnails" id="black">
                                        <div class="thumbnails-2by1">
                                            <div class="mask">
                                                <div class="mm">
                                                    <span class="news-date hide">
                                                        <i class="fa fa-camera"></i>更換圖片
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div>
                                    <button type="submit" class="btn btn-primary" id="picupdate" hidden>確定</button>
                                </div>
                            </div>
                            <div class="col-md-9">
                                <input type="hidden" name="Application_unit_no" value="@Model.Application_unit_no" />
                                <div class="info"><label><i class="fas fa-hospital-alt"></i>運用單位:</label>  <span>@Html.Label("-", Model.Application_unit1)</span></div>
                                <div class="info"><label><i class="fa fa-phone"></i>單位聯絡電話:</label><span>@Html.Label("-", Model.Application_phone_no) </span></div>
                                <div class="info"><label><i class="fas fa-home"></i>單位地址:</label>  <span>@Html.Label("-", Model.Application_address)</span></div>
                                <div class="info"><label><i class="far fa-list-alt"></i>工作內容:</label>  <span>@Html.Label("-", Model.Work_content)</span></div>
                                <div class="info"><label><i class="fas fa-users"></i>單位志工人數:</label><span>@Html.Label("-", Model.Total_volunteers.ToString())</span></div>
                                <div class="info"><label><i class="fas fa-user-tie"></i>負責人:</label>  <span>@Html.Label("-", Model.Principal)</span></div>
                                <div class="info"><label><i class="fas fa-mobile-alt"></i>負責人聯絡電話:</label>  <span>@Html.Label("-", Model.Principal_phone_no)</span></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />

}
@section Home_script{
    <script>
        $(document).ready(function () {

            $('div[id = "black"]').click(function () {
                $('input[id="ImagePath"]').click();
            })

            $('input[id = "ImagePath"]').change(function () {
                $("#picupdate").click();
            })

            $(".vision-news-loop").hover(function () {
                $('.news-date').toggleClass('hide');
            })

        })
    </script>
}
