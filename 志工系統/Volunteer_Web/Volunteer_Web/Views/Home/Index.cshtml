
@{
    ViewBag.Title = "Index";
}

@section Home_style{
    <link rel="stylesheet" href="https://cdn.staticfile.org/twitter-bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://cdn.staticfile.org/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://cdn.staticfile.org/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>
}

<div id="myCarousel" class="carousel slide">
    <!-- 轮播（Carousel）指标 -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- 轮播（Carousel）项目 -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Images/292-12-3.jpg" alt="First slide">
        </div>
        <div class="item">
            <img src="~/Images/299-06-1.jpg" alt="Second slide">
        </div>
        <div class="item">
            <img src="~/Images/maxresdefault.jpg" alt="Third slide">
        </div>
    </div>
    <!-- 轮播（Carousel）导航 -->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<!-- 控制按钮 -->

<div style="text-align:center;">    
    <input type="image" src="~/Images/292-12-3.jpg" data-target="#myCarousel" data-slide-to="0" class="btn slide-one " >
    <input type="image" src="~/Images/299-06-1.jpg" data-target="#myCarousel" data-slide-to="1" class="btn slide-two" >
    <input type="image" src="~/Images/maxresdefault.jpg" data-target="#myCarousel" data-slide-to="2" class="btn slide-three" >
</div>

<div class="row mb-2">
    <div class="col-md-6">
        <div class="card flex-md-row mb-4 shadow-sm h-md-250">
            <div class="card-body d-flex flex-column align-items-start">
                <strong class="d-inline-block mb-2 text-primary">近期焦點</strong>
                <h3 class="mb-0">
                    <a class="text-dark" href="#">活動名稱</a>
                </h3>
                <div class="mb-1 text-muted"> 更新日期</div>
                <p class="card-text mb-auto">活動簡介</p>
                <a href="#">Continue reading</a>
            </div>
            <img class="card-img-right flex-auto d-none d-lg-block" data-src="holder.js/200x250?theme=thumb" alt="Card image cap">
        </div>
    </div>
    <div class="col-md-6">
        <div class="card flex-md-row mb-4 shadow-sm h-md-250">
            <div class="card-body d-flex flex-column align-items-start">
                <strong class="d-inline-block mb-2 text-success">志工招募</strong>
                <h3 class="mb-0">
                    <a class="text-dark" href="#">我要成為志工</a>
                </h3>
                <div class="mb-1 text-muted">Nov 11</div>
                <p class="card-text mb-auto">招募辦法</p>
                <a href="#">Continue reading</a>
            </div>
            <img class="card-img-right flex-auto d-none d-lg-block" data-src="holder.js/200x250?theme=thumb" alt="Card image cap">
        </div>
    </div>
</div>

