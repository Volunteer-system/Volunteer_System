
@{
    ViewBag.Title = "TemporaryInsert";
}



<style>
    *[role="form"] {
        max-width: 530px;
        padding: 15px;
        margin: 0 auto;
        border-radius: 0.3em;
    }
</style>


<div class="cotainer" style="margin-top:50px;">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header" style="text-align:center;font-size:40px;">臨時人力需求申請</div>
                <div class="card-body">
                    <form class="form-horizontal" role="form" method="post" action="~/ManpowerApply/TemporaryInsert">
                        <div class="form-group row">
                            <label for="Applicant" class="col-md-4 col-form-label text-md-left">申請人</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" name="Applicant" placeholder="必填" autocomplete="off" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="Applicant_phone" class="col-md-4 col-form-label text-md-left">電話</label>
                            <div class="col-md-8">
                                <input type="tel" class="form-control" name="Applicant_phone" placeholder="必填" autocomplete="off" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-4 col-form-label text-md-left">需求日期</label>
                            <div div class="col-md-8">
                                <input type="date" class="form-control">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-4 col-form-label text-md-left">需求班別</label>
                            <div div class="col-md-8">
                                <select class="form-control">
                                    <option>請選擇</option>
                                    <option>上午班</option>
                                    <option>下午班</option>
                                    <option>夜間班</option>
                                    <option>支援班</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-4 col-form-label text-md-left">需求人數</label>
                            <div div class="col-md-8">
                                <input type="number" class="form-control" name="Application_number" placeholder="必填" autocomplete="off">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-4 col-form-label text-md-left">備註</label>
                            <div div class="col-md-8">
                                <textarea class="form-control" name="Remarks" rows="4" placeholder="必填" autocomplete="off" required></textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="Apply_description" class="col-md-4 col-form-label text-md-left">志工工作項目與流程</label>
                            <div class="col-md-8">
                                <textarea class="form-control" name="Apply_description" rows="4" placeholder="必填" autocomplete="off" required></textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="Application_unit_Supervisor" class="col-md-4 col-form-label text-md-left">單位主管</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" name="Application_unit_Supervisor" placeholder="必填" autocomplete="off" required>
                            </div>
                        </div>
                        <div class="col-md-6 offset-md-4">
                            <button type="submit" id="sbt" class="btn btn-info" onclick="return confirm('確定要提交申請嗎？')">提交申請</button>
                            <button type="reset" class="btn btn-info">重新輸入</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>