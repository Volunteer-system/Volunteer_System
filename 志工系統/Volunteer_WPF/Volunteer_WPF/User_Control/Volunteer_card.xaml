<UserControl x:Class="Volunteer_WPF.User_Control.Volunteer_card"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Volunteer_WPF.User_Control"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="180">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.Column="0" Fill="White" Stroke="Gray"/>
        <Image x:Name="img_photo" Margin="1">
        </Image>
        <Rectangle Grid.Column="1" Fill="White" Stroke="Gray"/>
        <Label Content="姓名:" Grid.Column="1" FontSize="14" Margin="5,5,74,29"/>
        <Label x:Name="lab_name" Content="label" Grid.Column="1" FontSize="14" Margin="48,5,8,29"/>
        <Label Content="類別:" Grid.Column="1" FontSize="14" Margin="5,31,74,3"/>
        <Label x:Name="lab_type" Content="label" Grid.Column="1" FontSize="14" Margin="48,31,8,3" RenderTransformOrigin="0.683,0.608"/>
    </Grid>
</UserControl>
