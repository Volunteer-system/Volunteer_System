        <TextBox Name="txtVest_no" HorizontalAlignment="Left" Height="23" Margin="498,103,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" KeyDown="txtVest_no_KeyDown"/>
