        Title="Window1" Height="615" Width="1020" Loaded="Window_Loaded_1">
    <!--<Window.Resources>
        <CollectionViewSource x:Key="volunteerViewSource" d:DesignSource="{d:DesignInstance {x:Type Volunteer_WPF:Volunteer}, CreateList=True}"/>
    </Window.Resources>-->
    <!--<Grid DataContext="{StaticResource volunteerViewSource}" Background="#FFA7E6DA">-->
    <Grid  Background="#FFA7E6DA">
        <Label Content="中文姓名" HorizontalAlignment="Left" Margin="11,9,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtChineseName" HorizontalAlignment="Left" Height="23" Margin="137,12,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" KeyDown="txtEnglishName_KeyDown"/>
        <Label Content="英文性名" HorizontalAlignment="Left" Margin="11,36,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtEnglishName" HorizontalAlignment="Left" Height="23" Margin="137,43,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" KeyDown="txtEnglishName_KeyDown"/>
        <Label Content="姓別" HorizontalAlignment="Left" Margin="11,64,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="cbsex" HorizontalAlignment="Left" Margin="137,71,0,0" VerticalAlignment="Top" Width="120" KeyDown="cbsex_KeyDown"/>

        <Label Content="生日" HorizontalAlignment="Left" Margin="14,98,0,0" VerticalAlignment="Top"/>
        <ComboBox  Name="cbBirthDayYear" HorizontalAlignment="Left" Margin="138,100,0,0" VerticalAlignment="Top" Width="60" />
        <ComboBox Name="cbBirthDayMonth" HorizontalAlignment="Left" Margin="203,100,0,0" VerticalAlignment="Top" Width="60" />
        <ComboBox Name="cbBirthDayDay" HorizontalAlignment="Left" Margin="268,100,0,0" VerticalAlignment="Top" Width="60"/>

        <Label Content="身分證字號(護照編號)" HorizontalAlignment="Left" Margin="11,128,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtIDcrad_no" HorizontalAlignment="Left" Height="23" Margin="137,128,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" />

        <Label Content="病歷號" HorizontalAlignment="Left" Margin="11,156,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtMedical_record_no" HorizontalAlignment="Left" Height="23" Margin="137,156,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" />

        <Label Content="身份類別" HorizontalAlignment="Left" Margin="11,177,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cbIdentity_type" HorizontalAlignment="Left" Margin="137,184,0,0" VerticalAlignment="Top" Width="120"/>

        <Label Content="服務年資" HorizontalAlignment="Left" Margin="11,205,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtSeniority" HorizontalAlignment="Left" Height="23" Margin="137,212,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" />

        <Label Content="加入日期" HorizontalAlignment="Left" Margin="11,232,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cbJoin_dateYear" HorizontalAlignment="Left" Margin="138,241,0,0" VerticalAlignment="Top" Width="60" />
        <ComboBox x:Name="cbJoin_dateMonth" HorizontalAlignment="Left" Margin="203,241,0,0" VerticalAlignment="Top" Width="60" />
        <ComboBox x:Name="cbJoin_dateDay" HorizontalAlignment="Left" Margin="268,241,0,0" VerticalAlignment="Top" Width="60"/>

        <Label Content="離開日期" HorizontalAlignment="Left" Margin="11,261,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cbLeave_dateYear" HorizontalAlignment="Left" Margin="138,269,0,0" VerticalAlignment="Top" Width="60" />
        <ComboBox x:Name="cbLeave_dateMonth" HorizontalAlignment="Left" Margin="203,269,0,0" VerticalAlignment="Top" Width="60" />
        <ComboBox x:Name="cbLeave_dateDay" HorizontalAlignment="Left" Margin="268,269,0,0" VerticalAlignment="Top" Width="60"/>

        <Label Content="離開原因" HorizontalAlignment="Left" Margin="11,292,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="cbLeaveReason" HorizontalAlignment="Left" Margin="137,297,0,0" VerticalAlignment="Top" Width="120" KeyDown="cbLeaveReason_KeyDown">
            <Label Content="因病" />
            <Label Content="工作因素" />
            <Label Content="個人因素" />
            <Label Content="不適任" />
            <Label Content="家庭因素" />
        </ComboBox>
        <Label Content="電話號碼" HorizontalAlignment="Left" Margin="351,42,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.41,0.153"/>
        <TextBox Name="txtPhone_no" HorizontalAlignment="Left" Height="23" Margin="498,47,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" KeyDown="txtPhone_no_KeyDown"/>
        <Label Content="手機號碼" HorizontalAlignment="Left" Margin="351,70,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtMobile_no" HorizontalAlignment="Left" Height="23" Margin="498,76,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" KeyDown="txtMobile_no_KeyDown"/>
