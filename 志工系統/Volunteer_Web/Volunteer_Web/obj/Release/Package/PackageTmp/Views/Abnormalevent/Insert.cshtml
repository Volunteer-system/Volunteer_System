
@{
    ViewBag.Title = "Insert";
}


<style>
    *[role="form"] {
        max-width: 530px;
        padding: 15px;
        margin: 0 auto;
        border-radius: 0.3em;
    }

        *[role="form"] h2 {
            font-family: 'Open Sans', sans-serif;
            font-size: 40px;
            font-weight: 600;
            color: #000000;
            margin-top: 5%;
            text-align: center;
            text-transform: uppercase;
            letter-spacing: 4px;
        }
</style>


<div class="container" style="margin-top:70px;">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header" style="text-align:center;font-size:40px;">異常事件通報</div>
                <div class="card-body">
                    <form class="form-horizontal" role="form" method="post" action="~/Abnormalevent/Insert" onsubmit="return confirm('確定要送出通報嗎?')">
                        <div class="form-group row">
                            <label for="Abnormal_event_ID"
                                   class="col-md-4 col-form-label text-md-left">事件案號</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" autocomplete="off"
                                       name="Abnormal_event_ID" id="Abnormal_event_ID" required placeholder="必填" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="Abnormal_event"
                                   class="col-md-4 col-form-label text-md-left">事件名稱</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" autocomplete="off"
                                       name="Abnormal_event" id="Abnormal_event" required placeholder="必填" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="Unit_description"
                                   class="col-md-4 col-form-label text-md-left">事件描述</label>
                            <div class="col-md-8">
                                <textarea class="form-control" name="Unit_description" rows="6" id="Unit_description" required placeholder="必填"></textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="Volunteer_no"
                                   class="col-md-4 col-form-label text-md-left">異常志工</label>
                            <div class="col-md-8">
                                @*<input type="text" class="form-control" autocomplete="off"
                name="Volunteer_no" />*@
                                @Html.DropDownList("Volunteer_no", (SelectList)ViewBag.voluteer, "請選擇", new { @class = "form-control", required = "Select Plan Type" })
                            </div>
                        </div>                       
                        <div class="form-group row">
                            <label for="category"
                                   class="col-md-4 col-form-label text-md-left">事件類別</label>
                            <div class="col-md-8">
                                @Html.DropDownList("category", (SelectList)ViewBag.insertcategory, "請選擇", new { @class = "form-control", required = "Select Plan Type" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-6 offset-md-4">
                                <button type="submit" class="btn btn-outline-secondary">送出</button>
                                <a href="~/Abnormalevent/Home" class="btn btn-outline-secondary" onclick="return confirm('確定要取消通報嗎？')">取消</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
