        <TextBox Name="txtPostal_code" HorizontalAlignment="Left" Height="23" Margin="498,132,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" KeyDown="txtPostal_code_KeyDown"/>
        <Label Content="地址" HorizontalAlignment="Left" Margin="14,317,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtAddress" HorizontalAlignment="Left" Height="23" Margin="137,323,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="481" KeyDown="txtAddress_KeyDown"/>
        <Label Content="學歷" HorizontalAlignment="Left" Margin="351,149,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="cbEducation" HorizontalAlignment="Left" Margin="497,155,0,0" VerticalAlignment="Top" Width="120" KeyDown="cbEducation_KeyDown">
            <Label Content="小學" />
            <Label Content="國中" />
            <Label Content="高中職" />
            <Label Content="專科" />
            <Label Content="大學" />
            <Label Content="研究所" />
        </ComboBox>
        <Label Content="發證單位" HorizontalAlignment="Left" Margin="351,177,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtLssuing_unit_no" HorizontalAlignment="Left" Height="23" Margin="498,182,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" KeyDown="txtLssuing_unit_no_KeyDown"/>
        <Label Content="志工服務手冊編號" HorizontalAlignment="Left" Margin="351,204,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtService_manual_no" HorizontalAlignment="Left" Height="23" Margin="498,211,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"  KeyDown="txtService_manual_no_KeyDown"/>
        <Label Content="人格量表結果" HorizontalAlignment="Left" Margin="351,233,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtPersonality_scale" HorizontalAlignment="Left" Height="23" Margin="498,239,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>

        <Label Content="照片" HorizontalAlignment="Left" Margin="629,9,0,0" VerticalAlignment="Top"/>

        <Grid Margin="668,10,137.6,411.6" Background="#FFCAFCED">
            <Image Name="myImage" />
        </Grid>
        <Button x:Name="btnOpen" Click="btnOpen_Click" Content="Open..." HorizontalAlignment="Left" Margin="890,143,0,0" VerticalAlignment="Top" Width="68" Height="31"/>
        

        <Button Content="確定" HorizontalAlignment="Left" Margin="58,369,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Content="取消" HorizontalAlignment="Left" Margin="138,369,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Name="btnDEMO" Content="demo" HorizontalAlignment="Left" Margin="58,448,0,0" VerticalAlignment="Top" Width="75" Click="btnDEMO_Click"/>
    </Grid>
</Window>
