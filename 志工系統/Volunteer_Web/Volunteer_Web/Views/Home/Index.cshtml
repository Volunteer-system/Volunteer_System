@section Home_style{
    <link rel="stylesheet" href="https://cdn.staticfile.org/twitter-bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://cdn.staticfile.org/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://cdn.staticfile.org/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <style>
        div.vision-news-loop{margin:15px 0px;}
        div.vision-news-loop:hover div.vision-thumbnails img.vision-news-photo{
            -webkit-transform: scale(1.1, 1.1);
            -moz-transform: scale(1.1, 1.1);
            -ms-transform: scale(1.1, 1.1);
            -o-transform: scale(1.1, 1.1);
            transform: scale(1.1, 1.1);
        }
        div.vision-news-loop div.vision-thumbnails img.vision-news-photo,div.vision-news-loop:hover div.vision-thumbnails img.vision-news-photo{
            -webkit-transition: all 0.9s;
            -moz-transition: all 0.9s;
            -o-transition: all 0.9s;
            transition: all 0.9s;
        }
        div.vision-news-loop div.mask,div.vision-news-loop:hover div.mask{
           -webkit-transition: all 0.35s;
           -moz-transition: all 0.35s;
           -o-transition: all 0.35s;
           transition: all 0.35s;
        }
        div.vision-news-loop div.mask{position:absolute;top:0px;right:0px;width:50%;height:100%;background-color:rgba(0,0,0,0.77);z-index:2;padding:30px;color:#BBB;}
        div.vision-news-loop:hover div.mask{width:100%;}
        span.news-date{color:#3CBBE8;font-size:18px;font-weight:bold;}
        div.vision-news-loop div.mask h3{color:#FFF;}
        div.vision-news-loop:hover div.mask h3{color:#3CBBE8;}
        div.news-more{color:#3CBBE8;margin-top:15px;}

        @@media (min-width:992px) and (max-width:1199px){
	       div.vision-news-loop div.mask h3{font-size:20px;}
        }
        @@media (min-width:768px) and (max-width:991px){
	       div.vision-news-loop div.mask{padding:15px;}
	       span.news-date{font-size:14px;}
	       div.vision-news-loop div.mask h3{font-size:16px;margin-top:5px;}
        }
        @@media (max-width: 540px) {
	       div.vision-news-loop div.mask{padding:15px;}
	       span.news-date{font-size:14px;}
	       div.vision-news-loop div.mask h3{font-size:16px;margin-top:5px;}
	       div.vision-news-loop div.mask{width:100%;}
        }

    </style>    
}


<div id="myCarousel" class="carousel slide">
    <!-- 輪播（Carousel）指標 -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- 輪播（Carousel）項目 -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Images/292-12-3.jpg" alt="First slide">
        </div>
        <div class="item">
            <img src="~/Images/299-06-1.jpg" alt="Second slide">
        </div>
        <div class="item">
            <img src="~/Images/maxresdefault.jpg" alt="Third slide">
        </div>
    </div>
    <!-- 輪播（Carousel -->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<!-- 控制按钮 -->

<div style="text-align:center;">    
    <input type="image" src="~/Images/292-12-3.jpg" data-target="#myCarousel" data-slide-to="0" class="btn slide-one " >
