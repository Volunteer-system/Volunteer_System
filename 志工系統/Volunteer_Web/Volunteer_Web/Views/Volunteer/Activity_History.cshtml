@section script{
    <script>
        $(document).ready(function () {
            $("h2>a[name='actnum']").click(function () {
                $("#load_d").load("/Volunteer/Activity_DetailPartial/" + $(this).data("value"))
                
                $(this).attr({ "data-toggle": "modal", "data-target": "#showModal"})
            });
            $("#load_d").on("click","td>img",function () {
                //console.log("OK")
                $(this).attr({ "data-toggle": "modal", "data-target": "#DetailModal" })
                $("#showimg").attr("src", $(this).attr("src"))
            });
        });
        $(document).on('hidden.bs.modal', '.modal', function () {
            $('.modal:visible').length && $(document.body).addClass('modal-open');
        });
    </script>
