@model Volunteer_Web.ViewModel.Sign_up_Alldata_VM
@section Home_style{
    <style>

        .fontstyle {
            font-size: 20px;
            font-family: 微軟正黑體;
        }
    </style>
}
<div class="row" id="div1">
    <table class="table table-bordered">
        <tbody>
            <tr>
                <td><label>姓名:</label></td>
                <td><label>@Model.Chinese_name</label></td>
            </tr>
            <tr>
                <td><label>姓別:</label></td>
                <td><label>@Model.Sex</label></td>
            </tr>
            <tr>
                <td><label>生日:</label></td>
                <td><label>@Model.Birthday</label></td>
            </tr>
            <tr>
                <td><label>申請類別:</label></td>
                <td><label>@Model.Sign_up_type</label></td>
            </tr>
            <tr>
                <td><label>市話:</label></td>
                <td><label>@Model.Phone</label></td>
            </tr>
            <tr>
                <td><label>手機:</label></td>
                <td><label>@Model.Mobile</label></td>
            </tr>
            <tr>
                <td><label>電子郵件:</label></td>
                <td><label>@Model.Email</label></td>
            </tr>
            <tr>
                <td><label>地址:</label></td>
                <td><label>@Model.Address</label></td>
            </tr>
            <tr>
                <td><label>教育程度:</label></td>
                <td><label>@Model.Education</label></td>
            </tr>
            <tr>
                <td><label>工作類別:</label></td>
                <td><label>@Model.Job</label></td>
            </tr>
            <tr>
                <td><label>專長:</label></td>
                <td>
                    @{
                        string exp = "";
                        if (Model.Expertises != null)
                        {
                            foreach (var a in @Model.Expertises)
                            {
                                exp = exp + a.Substring(1);
                            }
                        }
                        <label id="exp">@exp</label>
                    }
                </td>
            </tr>
        </tbody>
    </table>
</div>

<div class="row" id="div2">
    <table class="table table-bordered">
        <tbody>
            <tr>
                <td><label>1.為何想成為志工:</label></td>
                <td>
                    @{
                        string q1 = "";
                        if (Model.Q1 != null)
                        {
                            foreach (var a in @Model.Q1)
                            {
                                q1 = q1 + a.Substring(1) + " , ";
                            }
                        }
                        q1 = q1 + Model.Q1else;
                        <label id="q1">@q1</label>
                    }
                </td>
            </tr>
            <tr>
                <td><label>2.您為何選擇亞東醫院做志工服務:</label></td>
                <td>
                    @{
                        string q2 = "";
                        if (Model.Q2 != null)
                        {
                            foreach (var a in @Model.Q2)
                            {
                                q2 = q2 + a.Substring(1) + " , ";
                            }
                        }
                        q2 = q2 + Model.Q2else;
                        <label id="q2">@q2</label>
                    }

                </td>
            </tr>
            <tr>
                <td><label>3.您是由何處得知亞東醫院招募志工的消息:</label></td>
                <td>
                    @{
                        string q3 = "";
                        if (Model.Q3 != null)
                        {
                            foreach (var a in @Model.Q3)
                            {
                                q3 = q3 + a.Substring(1) + " , ";
                            }
                        }
                        q3 = q3 + Model.Q3doc;
                        <label id="q3">@q3</label>
                    }
                </td>
            </tr>

            <tr>
                <td><label>4.您以前與亞東醫院的互動關係為?</label></td>
                <td>
                    @{
                        string q4 = "";
                        if (Model.Q4 != null)
                        {
                            foreach (var a in @Model.Q4)
                            {
                                q4 = q4 + a.Substring(1) + " , ";
                            }
                        }
                        q4 = q4 + Model.Q4else;

                        <label id="q4">@q4</label>
                    }
                </td>
            </tr>
            <tr>
                <td><label>5.是否曾經或正在其他機構擔任志工:</label></td>
                <td>
                    @{
                        string unit = Model.Q5unit ?? "__";
                        string year = Model.Q5years ?? "__";
                        string content = Model.Q5content ?? "__";


                        string q5 = "機構:" + unit + " , " + year + "年 , " + "工作內容 : " + content;
                        <label id="q5">@q5</label>
                    }
                </td>
            </tr>
            <tr>
                <td><label>6.您曾經從事過的工作(非志工職)為:</label></td>
                <td>
                    @{
                        string q6 = "";
                        if (Model.Q6jobs != null)
                        {
                            q6 = Model.Q6jobs;
                        }
                        <label id="q6">@q6</label>
                    }
                </td>
            </tr>
            <tr>
                <td><label>7.您在未來的一年內是否會找工作:</label></td>
                <td>
                    @{
                        string q7 = "";
                        if (Model.Q7 != null)
                        {
                            foreach (var a in Model.Q7)
                            {
                                q7 = q7 + a.Substring(1) + " , ";
                            }
                        }
                        <label id="q7">@q7</label>
                    }
                </td>
            </tr>

            <tr>
                <td><label>8.您到醫院的交通工具為:</label></td>
                <td>

                    @{
                        string q8 = "";
                        if (Model.Q8 != null)
                        {
                            foreach (var a in @Model.Q8)
                            {
                                q8 = q8 + a.Substring(1) + " , ";
                            }
                        }
                        <label id="q8">@q8</label>
                    }
                </td>
            </tr>
        </tbody>
    </table>
</div>
<a href="~/Home/InsertSign_up" class="btn btn-success">確定並送出</a>




