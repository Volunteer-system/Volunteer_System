<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Volunteer_WPF.View"
        xmlns:Volunteer_WPF="clr-namespace:Volunteer_WPF" x:Class="Volunteer_WPF.View.Sign_up_View"
        mc:Ignorable="d"
        Title="Sign_up_View" Height="615" Width="1020">
    <Grid>
        <DockPanel x:Name="Dock_Frame" LastChildFill="True" Margin="1" >
            <StackPanel x:Name="StackPanel_Left" DockPanel.Dock="Left" Margin="1" Width="150" Background="#FFA7E6DA">
                <Button x:Name="btn_firstcheck" Content="初次申請審核" Height="52" Click="btn_firstcheck_Click" Margin="5"/>
                <Button x:Name="btn_interview" Content="面試階段審核" Height="52" Click="btn_interview_Click"  Margin="5"/>
                <Button x:Name="btn_Allpass" Content="查詢已通過審核" Height="52" Click="btn_Allpass_Click"  Margin="5"/>
                <Label Content="依日期查詢" FontFamily="Microsoft Sans Serif" FontSize="25" FontWeight="Bold"/>
                <Label Content="起始日期:" FontFamily="Microsoft Sans Serif" FontSize="16" />
                <DatePicker Name="D_Start_date"/>
                <Label Content="結束日期:" FontFamily="Microsoft Sans Serif" FontSize="16" />
                <DatePicker Name="D_End_date"/>
                <Button x:Name="btn_selectDate" Content="查詢" Height="52"  Margin="5" Click="btn_selectDate_Click"/>
            </StackPanel>
            <Grid Height="Auto" ShowGridLines="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>
                <GridSplitter Grid.Row="0" VerticalAlignment="Bottom"  HorizontalAlignment="Stretch" BorderThickness="2" BorderBrush="Transparent" ></GridSplitter>
                <!--<DataGrid    VerticalAlignment="Center" HorizontalAlignment="Center"  Background="DarkGray"    Focusable="False" IsHitTestVisible="True"  Height="97" Margin="84,98,564,193" Width="210" Grid.Row="1">
                   
                </DataGrid>-->
                <DockPanel LastChildFill="True" Background="#FFA7E6DA">
                    <Button Content="確認" Click="btn_check_Click" Width="108" HorizontalAlignment="Left" DockPanel.Dock="Left" Margin="0,151,0,0" />
                    <DataGrid x:Name="DataGrid_1" Background="DarkGray" SelectionChanged="DataGrid_1_SelectionChanged" AutoGenerateColumns="True" FontFamily="Microsoft Sans Serif" FontSize="16" AlternatingRowBackground="#FFC0F5E7" CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Width="50">
                                <DataGridTemplateColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="" Background="Transparent"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.HeaderTemplate>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="刪除" Width="50" Click="btn_check_Click"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="100">
                                <DataGridTemplateColumn.HeaderTemplate >
                                    <DataTemplate>
                                        <TextBlock Text="審核設定" Background="Transparent"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.HeaderTemplate>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Volunteer_WPF:MyUserControl Width="90" Height="50" x:Name="Check_interview" MU_Click_OK="Check_interview_Click" MU_Click_Delete="Check_interview_MU_Click_Delete"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
                <ScrollViewer Height="Auto" Grid.Row="1">
                    <StackPanel x:Name="wondow_show" HorizontalAlignment="Left" Margin="10" Grid.Row="1" VerticalAlignment="Top" />
                </ScrollViewer>
            </Grid>

        </DockPanel>

    </Grid>
</Window>
