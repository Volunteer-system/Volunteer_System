
@{
    ViewBag.Title = "Insert";
}

<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>

<div id="fullscreen_bg" class="fullscreen_bg" />
<div class="container">
    <div id="signupbox" style=" margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">異常事件通報</div>
            </div>
            <div class="panel-body">
                <form method="post" action="~/Abnormalevent/Insert" class="form-horizontal">
                    <div class="form-group">
                        <label for="Abnormal_event_ID"
                               class="col-sm-2 control-label">事件案號</label>
                        <div>
                            <input type="text" class="form-control" autocomplete="off"
                                   name="Abnormal_event_ID" id="Abnormal_event_ID" required />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Abnormal_event"
                               class="col-sm-2 control-label">事件名稱</label>
                        <div>
                            <input type="text" class="form-control" autocomplete="off"
                                   name="Abnormal_event" id="Abnormal_event" required />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Unit_description"
                               class="col-sm-2 control-label">事件描述</label>
                        <div>
                            <textarea class="form-control" name="Unit_description" rows="6" id="Unit_description" required></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Volunteer_no"
                               class="col-sm-2 control-label">異常志工</label>
                        <div>
                            @*<input type="text" class="form-control" autocomplete="off"
                                name="Volunteer_no" />*@
                            @Html.DropDownList("Volunteer_no", (SelectList)ViewBag.voluteer, "請選擇", new { @class = "form-control", required = "Select Plan Type" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="category"
                               class="col-sm-2 control-label">事件類別</label>
                        <div>
                            @Html.DropDownList("category", (SelectList)ViewBag.insertcategory, "請選擇", new { @class = "form-control", required = "Select Plan Type" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-success" onclick="return confirm('確定要送出通報嗎?')">送出</button>
                            <a href="~/Abnormalevent/Home" class="btn btn-danger" onclick="return confirm('確定要取消通報嗎？')">取消</a>    
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
