<UserControl x:Class="Volunteer_WPF.User_Control.Volunteer_card"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Volunteer_WPF.User_Control"
             mc:Ignorable="d" Height="80" Width="184.4">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.Column="0" Fill="White" Stroke="Gray"/>
        <Image x:Name="img_photo" Margin="1">
        </Image>
        <Rectangle Grid.Column="1" Fill="White" Stroke="Gray"/>
        <Label Content="姓名:" Grid.Column="1" FontSize="14" Margin="5,2,74,52"/>
        <Label x:Name="lab_name" Content="label" Grid.Column="1" FontSize="14" Margin="48,2,8,52"/>
        <Label Content="類別:" Grid.Column="1" FontSize="14" Margin="5,28,74,25"/>
        <Label x:Name="lab_type" Content="label" Grid.Column="1" FontSize="14" Margin="48,28,8,25" RenderTransformOrigin="0.683,0.608"/>
        <Label Content="志願:" Grid.Column="1" FontSize="14" Margin="5,52,74,1"/>
        <Label x:Name="lab_order" Content="label" Grid.Column="1" FontSize="14" Margin="48,52,8,1" RenderTransformOrigin="0.683,0.608"/>
    </Grid>
</UserControl>
